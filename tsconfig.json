{
	"compilerOptions": {
		"declaration": true,
		"lib": ["ES2022", "DOM"],
		"module": "Node16",
		"moduleResolution": "node16",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
